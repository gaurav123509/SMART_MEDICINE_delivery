# ============================================
# Smart Medicine Delivery Network - Config
# ============================================

# Maps & Geolocation (Google Maps API)
MAPS_API_KEY=your_google_maps_api_key_here
# Or use Mapbox:
# MAPBOX_API_KEY=your_mapbox_token_here

# OTP / SMS Provider (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+911234567890

# Payment Gateway (Razorpay - India preferred)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Payment Gateway (Stripe alternative)
STRIPE_API_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key

# Database
DATABASE_URL=sqlite:///dev.db
# For PostgreSQL: postgresql://user:password@localhost:5432/medicine_delivery
# For MySQL: mysql://user:password@localhost:3306/medicine_delivery

# Storage (AWS S3 for prescription/license images)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_S3_REGION=ap-south-1

# App Security
SECRET_KEY=change_this_to_a_long_random_secure_string_min_32_chars
DEBUG=False

# Server Config
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Feature Flags
USE_MOCK_OTP=True
USE_MOCK_PAYMENT=False
USE_MOCK_MAPS=False

# Delivery Settings
FREE_DELIVERY_RADIUS_KM=2.5
EXPRESS_DELIVERY_MINUTES=20
EXPRESS_DELIVERY_CHARGE=30
